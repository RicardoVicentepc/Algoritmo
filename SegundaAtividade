<script>
    function media(){
        alert('média : ' + (Number(input_n1.value) + Number(input_n2.value) + Number(input_n3.value)) / 3);
    }
    function mediaPonderada(){
        alert( ((Number(input_n4.value) * 2) + (Number(input_n5.value) * 4)  + (Number(input_n6.value) * 4)) / (2 + 4 + 4))
    }
</script>
